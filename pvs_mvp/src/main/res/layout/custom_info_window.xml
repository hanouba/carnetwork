<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:orientation="horizontal"
    android:background="@drawable/border_green"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_dp_5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_map_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆编号 002"
            android:textColor="@color/color_323232"
            android:textSize="14sp"
          />

        <TextView
            android:id="@+id/tv_car_map_licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌 鄂A95647"
            android:textSize="12sp"
            />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_car_phone"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_dp_5"
        android:scaleType="center"
        app:srcCompat="@drawable/icon_phone" />


</LinearLayout>