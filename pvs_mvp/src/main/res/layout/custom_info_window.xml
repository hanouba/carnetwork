<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:background="@drawable/border_green"
        android:id="@+id/cl_root"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_map_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆编号: 未知"
            android:textColor="@color/color_323232"
            android:textSize="14sp"
          />

        <TextView
            android:id="@+id/tv_car_map_licence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌: 未知"
            android:textSize="12sp"
            />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_car_phone"
        android:layout_width="26dp"
        android:visibility="gone"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_dp_5"
        android:scaleType="center"
        app:srcCompat="@drawable/icon_phone" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_truce_mark"
        android:layout_marginTop="@dimen/dimen_dp_5"
        android:layout_width="@dimen/dimen_dp_26"
        android:layout_height="@dimen/dimen_dp_26"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_truck"
      />
</LinearLayout>