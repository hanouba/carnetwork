<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_tip"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_dp_10"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_bottom_car_licence"
            android:background="@drawable/border_yellow"
            android:text="鄂A123456"
            android:textColor="@color/color_313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:background="@drawable/state_car_green"
            android:text="行驶"
            android:id="@+id/tv_bottom_car_state"
            android:padding="@dimen/dimen_dp_3"
            android:textSize="@dimen/dimen_sp_10"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimen_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/last_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_dp_5"
                    android:text="最后上报:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/tv_reprot_time"
                    android:textColor="@color/color_313131"
                    android:layout_marginLeft="@dimen/dimen_dp_5"
                    android:text="2020-10-30 14:05:29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/icon_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

                <TextView
                    android:layout_marginLeft="@dimen/dimen_dp_5"
                    android:text="速度:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/tv_speed"
                    android:textColor="@color/color_313131"
                    android:layout_marginLeft="@dimen/dimen_dp_5"
                    android:text="86.0km/h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:id="@+id/iv_car_phone"
            android:src="@drawable/icon_phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:padding="@dimen/dimen_dp_10"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"></ImageView>

    </LinearLayout>


</LinearLayout>