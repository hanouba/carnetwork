<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_45"
            android:background="@color/color_blue">

            <ImageButton
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dimen_dp_26"
                android:layout_height="@dimen/dimen_dp_26"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:background="@mipmap/back_white" />

            <TextView
                android:id="@+id/info_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_sp_17"
                android:visibility="gone" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_step"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_32"
            android:layout_below="@+id/rl_title"
            android:layout_marginStart="@dimen/dimen_dp_40"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_40"
            android:scaleType="fitXY"
            android:src="@drawable/create_project_2" />

        <include
            android:id="@+id/rl_step"
            layout="@layout/item_create_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_step" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_5"
            android:layout_below="@+id/rl_step"
            android:background="@color/color_underline" />

        <RelativeLayout
            android:id="@+id/rl_selected_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:layout_marginEnd="@dimen/dimen_dp_20" />
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_5"
            android:layout_below="@+id/rl_selected_user"
            android:background="@color/color_underline" />


        <TextView
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_15"
            android:text="车队名称"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/dimen_sp_12" />

        <EditText
            android:id="@+id/et_car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:layout_toEndOf="@+id/tv_name"
            android:background="@null"
            android:hint="请输入姓名"
            android:maxLength="20"
            android:textColor="@color/color_343434"
            android:textColorHint="@color/color_a5a5a5"
            android:textSize="@dimen/dimen_sp_12" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_1"
            android:layout_below="@+id/tv_car"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:background="@color/grey1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_1"
            android:layout_below="@+id/line4"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:background="@color/grey1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_15"
            android:text="请输入姓名"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/dimen_sp_12" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:layout_toEndOf="@+id/tv_name"
            android:background="@null"
            android:hint="请输入姓名"
            android:maxLength="20"
            android:textColor="@color/color_343434"
            android:textColorHint="@color/color_a5a5a5"
            android:textSize="@dimen/dimen_sp_12" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_1"
            android:layout_below="@+id/et_name"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:background="@color/grey1" />

        <TextView
            android:id="@+id/tv_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_25"
            android:text="手&#160;&#160;机&#160;&#160;号"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/dimen_sp_12" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:layout_alignTop="@+id/tv_phone_num"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:layout_toEndOf="@+id/tv_phone_num"
            android:background="@null"
            android:hint="请输入手机号以找回项目名称"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_343434"
            android:textColorHint="@color/color_a5a5a5"
            android:textSize="@dimen/dimen_sp_12" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_1"
            android:layout_below="@+id/et_phone_number"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_10"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:background="@color/grey1" />

        <RelativeLayout
            android:id="@+id/rl_admin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_below="@+id/line">

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:text="验&#160;&#160;证&#160;&#160;码"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/dimen_sp_12" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/dimen_dp_20"
                android:background="@color/grey1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_unit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_below="@+id/rl_admin">

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:text="所属单位"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/dimen_sp_12" />

            <EditText
                android:id="@+id/et_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:layout_marginEnd="@dimen/dimen_dp_60"
                android:layout_toEndOf="@+id/tv_unit"
                android:background="@null"
                android:focusable="false"
                android:hint="请选择所属单位"
                android:textColor="@color/color_343434"
                android:textColorHint="@color/color_a5a5a5"
                android:textSize="@dimen/dimen_sp_12" />

            <ImageView
                android:id="@+id/iv_select_unit"
                android:layout_width="@dimen/dimen_dp_25"
                android:layout_height="@dimen/dimen_dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_dp_20"
                android:src="@drawable/arrow_right_grey" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:layout_marginEnd="@dimen/dimen_dp_20"
                android:background="@color/grey1" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_below="@+id/rl_unit">

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:text="所在岗位"
                android:textColor="@color/colorTextGrey"
                android:textSize="@dimen/dimen_sp_12" />

            <EditText
                android:id="@+id/et_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:layout_marginEnd="@dimen/dimen_dp_60"
                android:layout_toEndOf="@+id/tv_job"
                android:background="@null"
                android:focusable="false"
                android:hint="请选择所在岗位"
                android:textColor="@color/color_343434"
                android:textColorHint="@color/color_a5a5a5"
                android:textSize="@dimen/dimen_sp_12" />

            <ImageView
                android:id="@+id/iv_select_job"
                android:layout_width="@dimen/dimen_dp_25"
                android:layout_height="@dimen/dimen_dp_25"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_dp_20"
                android:src="@drawable/arrow_right_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dimen_dp_20"
                android:layout_marginEnd="@dimen/dimen_dp_20"
                android:background="@color/grey1" />

        </RelativeLayout>


        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_10"
            android:layout_below="@+id/rl_job"
            android:background="@color/color_underline" />

        <Button
            android:id="@+id/btn_continue_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_below="@+id/line3"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:layout_marginBottom="@dimen/dimen_dp_20"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:text="完成, 继续添加"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_sp_12" />

        <Button
            android:id="@+id/bt_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_40"
            android:layout_below="@+id/btn_continue_add"
            android:layout_marginStart="@dimen/dimen_dp_20"
            android:layout_marginEnd="@dimen/dimen_dp_20"
            android:layout_marginBottom="@dimen/dimen_dp_20"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:text="完成, 下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_sp_12" />
    </RelativeLayout>
</ScrollView>
