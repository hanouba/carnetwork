<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.amap.api.maps.MapView>


    <TextView
        android:layout_marginTop="@dimen/dimen_dp_25"
        android:background="@color/color_3BD134"
        android:textSize="@dimen/dimen_sp_14"
        android:text="工作中....."
        android:id="@+id/tv_work_state"
        android:padding="@dimen/dimen_dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/bt_reset"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_dp_20"
        android:layout_marginBottom="@dimen/dimen_dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/icon_reset"
     />
</RelativeLayout>