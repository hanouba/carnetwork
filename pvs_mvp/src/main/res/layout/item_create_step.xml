<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_step"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/dimen_dp_10"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_create_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_dp_30"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:text="系统登录"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_create_step1_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_step1"
        android:layout_marginStart="@dimen/dimen_dp_32"
        android:text="创建新车队"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/dimen_sp_10"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_create_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_step"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_dp_30"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:text="添加用户"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_create_step2_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_step2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dimen_dp_32"
        android:text="添加用户"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/dimen_sp_10"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_create_step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv_step"
        android:layout_marginEnd="@dimen/dimen_dp_42"
        android:layout_marginTop="@dimen/dimen_dp_15"
        android:text="完成"
        android:textColor="@color/color_black"
        android:textSize="@dimen/dimen_sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_create_step3_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_create_step3"
        android:layout_marginEnd="@dimen/dimen_dp_35"
        android:text="完成开通"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/dimen_sp_10"
        android:textStyle="bold" />
</RelativeLayout>
